<% content_for :title, "@#{@user.username}" %>
<div class="container">
  <div class="page-header">
    <h1><%= yield :title %></h1>
  </div>
  <div class="page-body row">
    <div class="content span7">
      <%= render partial: "layouts/media-grid-photos", locals: {photos: @photos} %>
      <%= render partial: "layouts/page-status", locals: {pagination: @pagination, key: "max_id"} %>
    </div>
    <div class="dashboard span5">
      <%= render partial: "layouts/user", locals: {user: @user, relationship: @relationship} %>
    </div>
  </div>
</div>
<%= render partial: "layouts/media-panel", locals: {photos: @photos} %>
