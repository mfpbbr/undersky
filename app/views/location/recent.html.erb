<% content_for :title, @location.name %>
<% content_for :googlemaps do %>
  <%= javascript_include_tag "http://maps.google.com/maps/api/js?sensor=false" %>
<% end %>
<div class="container">
  <div class="page-header">
    <h1><%= yield :title %></h1>
  </div>
  <div class="page-body row">
    <div class="content span7">
      <%= render partial: "layouts/media-grid-photos", locals: {photos: @photos} %>
      <%= render partial: "layouts/page-status", locals: {pagination: @pagination, key: "max_id"} %>
    </div>
    <div class="dashboard span4-5 offset0-5">
      <div class="location">
        <div class="name">
          <h2><%= link_to @location.name, location_url(id: @location.id) %></h2>
        </div>
        <hr />
        <%= content_tag :div, nil, class: "map", data: @location %>
        <hr />
        <h3>Nearby</h3>
        <div class="nearby">
          <%= render partial: "layouts/location", collection: @locations %>
        </div>
      </div>
    </div>
  </div>
</div>
<%= render partial: "layouts/media-panel", locals: {photos: @photos} %>
